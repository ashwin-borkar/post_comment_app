<div class="section">
<%= form_for @post do |f| %>
  <div class="field">
    <div class="control">
      <%= f.text_field :post_title %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.text_field :post_description %>
    </div>
  </div>
  <%= f.submit %>
<% end %>
</div>